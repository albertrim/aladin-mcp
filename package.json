{
  "name": "aladin-mcp",
  "version": "1.0.0",
  "description": "알라딘 OpenAPI용 MCP(Model Context Protocol) 서버 - Node.js와 TypeScript 기반 도서 정보 조회 시스템",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "npm run build:check && npm run build:compile",
    "build:check": "npm run lint && npm run type-check && npm run test",
    "build:compile": "tsc",
    "build:prod": "npm run build:check && tsc -p tsconfig.prod.json",
    "build:verify": "node scripts/verify-build.js",
    "start": "node dist/index.js",
    "dev": "nodemon --exec ts-node --esm src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rimraf dist .tsbuildinfo",
    "prebuild": "npm run clean",
    "postbuild": "npm run build:verify",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build:prod",
    "release": "npm run build:prod && npm publish",
    "version": "npm run build:prod && git add .",
    "postversion": "git push && git push --tags",
    "monitor": "node scripts/monitor.js",
    "monitor:continuous": "node scripts/monitor.js --continuous",
    "deploy": "node scripts/deploy.js",
    "deploy:patch": "node scripts/deploy.js patch",
    "deploy:minor": "node scripts/deploy.js minor",
    "deploy:major": "node scripts/deploy.js major"
  },
  "keywords": [
    "aladin",
    "openapi",
    "mcp",
    "model-context-protocol",
    "claude",
    "book",
    "search",
    "api",
    "typescript",
    "nodejs"
  ],
  "author": "Albert Rim <albertrim@example.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/albertrim/aladin-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/albertrim/aladin-mcp/issues"
  },
  "homepage": "https://github.com/albertrim/aladin-mcp#readme",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@10.17.0",
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.2",
    "@types/supertest": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^8.44.1",
    "axios-mock-adapter": "^2.1.0",
    "eslint": "^9.36.0",
    "jest": "^30.1.3",
    "jest-environment-node": "^30.1.2",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "axios": "^1.12.2",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.2",
    "fast-xml-parser": "^5.2.5",
    "winston": "^3.17.0"
  }
}
